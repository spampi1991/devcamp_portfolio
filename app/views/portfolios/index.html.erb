<h1>Portfolios Items</h1>

<%= link_to "Add new portfolio", new_portfolio_path %>

<% @portfolios_items.each do |item| %>
  <p><%= item.title %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <p><%= image_tag item.thumb_image unless item.thumb_image.nil? %></p>
  <%= link_to "Edit", edit_portfolio_path(item) %>
<% end %>
