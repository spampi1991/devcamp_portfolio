<h1>Portfolios Items</h1>

<%= link_to "Add new portfolio", new_portfolio_path %>

<% @portfolios_items.each do |item| %>
  <p><%= link_to item.title, portfolio_path(item) %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(item) %>
  <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
